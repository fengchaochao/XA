<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>列表信息</title>
    <%@ include file="/WEB-INF/views/common/headCommon.jsp"%>
    <link href='<spring:url value="/css/plugin/bootstrap-table/bootstrap-table.min.1.10.1.css" />' rel="stylesheet"/>
</head>
<body class="mainContant">
   <!--start pageHeadline -->
   <div class="pageHeadline">
      <span class="leftNotice">月新增会员统计</span>
   </div>
   <!--end pageHeadline -->
   
   <div class="whiteBox">
   		 <div class="form-group" style="margin-top: 15px;margin-left: -31px;">
	   		 <c:if test="${sysUsers.userState=='0' }">
	   		 	<table>
		   		   <thead>
		   		   <tr>
			   		   <th>月份</th>
			           <th>代理商</th>
			           <th>商家</th>
			           <th>消费者账户</th>
			           <th>消费者</th>
			           <th>消费商</th>
		   		   </tr>
		   		   </thead>
		   		   <tbody>
			   		   <tr>
			   		   <td>${month}月</td><td>${agentNum}</td><td>${businessNum}</td><td>${consumersAcountNum}</td><td>${consumersNum}</td><td>${xfBusinessNum}</td>
			   		   </tr>
		   		   </tbody>
	   		  	</table> 
	   		 </c:if>
	   		 <c:if test="${sysUsers.userState=='1' }">
	   		 	<table>
		   		   <thead>
		   		   <tr>
			   		   <th>月份</th>
			           <th>商家</th>
			           <th>消费商</th>
		   		   </tr>
		   		   </thead>
		   		   <tbody>
			   		   <tr>
			   		   <td>${month}月</td><td>${businessNum}</td><td>${xfBusinessNum}</td>
			   		   </tr>
		   		   </tbody>
	   		  	</table> 
	   		 </c:if>
	   		 <c:if test="${sysUsers.userState=='2' }">
	   		 	<table>
		   		   <thead>
		   		   <tr>
			   		   <th>月份</th>
			           <th>商家</th>
			           <th>消费者账户</th>
		   		   </tr>
		   		   </thead>
		   		   <tbody>
			   		   <tr>
			   		   <td>${month}月</td><td>${businessNum}</td><td>${consumersAcountNum}</td>
			   		   </tr>
		   		   </tbody>
	   		  	</table> 
	   		 </c:if>
         </div>
         <c:if test="${sysUsers.userState=='0' }">
	    	<table id="tb_board"></table> 
	    </c:if>
         <c:if test="${sysUsers.userState=='1' }">
	    	<table id="tb_board1"></table> 
	    </c:if>
         <c:if test="${sysUsers.userState=='2' }">
	    	<table id="tb_board2"></table> 
	    </c:if>
   </div>
    <script type="text/javascript" src='<spring:url value="/js/plugin/bootstrap-table-1.10.1/bootstrap-table.min.1.10.1.js"/>'></script>
    <script type="text/javascript" src='<spring:url value="/js/plugin/bootstrap-table-1.10.1/locale/bootstrap-table-zh-CN.min.js"/>'></script>
	<script type="text/javascript">
	    var $table;
	    var $table1;
	    var $table2;
		$(function() {
			initTable();
			initTable1();
			initTable2();
		});
		
		// 初始化表格
		function initTable() {
            $table = $('#tb_board').bootstrapTable({
                method: 'get',
                url : '<spring:url value="/headquarters/memberStatistics/doReadMonthMemberStatisticsList" />',
                pagination: false,
                sidePagination: "server", //服务端请求
                showRefresh : true,
				striped : true,
				silent : true,
				sortable: true, 
				sortOrder: "asc",
                responseHandler: responseHandler,
                columns : [ {
                	field: 'state',
					checkbox : true
				}, {
					field : 'month',
					title : '月份'
				}, {
					field : 'agentNumber',
					title : '代理商'
				}, {
					field : 'businessNumber',
					title : '商家'
				}, {
					field : 'consumerNumber',
					title : '消费者账户'
				}, {
					field : 'xFConsumerNumber',
					title : '消费者'
				}, {
					field : 'accountNumber',
					title : '消费商'
				}],
                onLoadSuccess:function(){

                },
                formatLoadingMessage : function() {
									return "请稍等，正在加载中...";
								},
				formatNoMatches : function() { //没有匹配的结果
					return "无符合条件的记录";
				},
                onLoadError: function () {
                    alert("数据加载失败！");
                }
            });
        }
        // 初始化表格
		function initTable1() {
            $table1 = $('#tb_board1').bootstrapTable({
                method: 'get',
                url : '<spring:url value="/headquarters/memberStatistics/doReadMonthMemberStatisticsList" />',
                pagination: false,
                sidePagination: "server", //服务端请求
                showRefresh : true,
				striped : true,
				silent : true,
				sortable: true, 
				sortOrder: "asc",
                responseHandler: responseHandler,
                columns : [ {
                	field: 'state',
					checkbox : true
				}, {
					field : 'month',
					title : '月份'
				}, {
					field : 'businessNumber',
					title : '商家'
				}, {
					field : 'accountNumber',
					title : '消费商'
				}],
                onLoadSuccess:function(){

                },
                formatLoadingMessage : function() {
									return "请稍等，正在加载中...";
								},
				formatNoMatches : function() { //没有匹配的结果
					return "无符合条件的记录";
				},
                onLoadError: function () {
                    alert("数据加载失败！");
                }
            });
        }
        // 初始化表格
		function initTable2() {
            $table2 = $('#tb_board2').bootstrapTable({
                method: 'get',
                url : '<spring:url value="/headquarters/memberStatistics/doReadMonthMemberStatisticsList" />',
                pagination: false,
                sidePagination: "server", //服务端请求
                showRefresh : true,
				striped : true,
				silent : true,
				sortable: true, 
				sortOrder: "asc",
                responseHandler: responseHandler,
                columns : [ {
                	field: 'state',
					checkbox : true
				}, {
					field : 'month',
					title : '月份'
				}, {
					field : 'businessNumber',
					title : '商家'
				}, {
					field : 'consumerNumber',
					title : '消费者账户'
				}],
                onLoadSuccess:function(){

                },
                formatLoadingMessage : function() {
									return "请稍等，正在加载中...";
								},
				formatNoMatches : function() { //没有匹配的结果
					return "无符合条件的记录";
				},
                onLoadError: function () {
                    alert("数据加载失败！");
                }
            });
        }
        
		// json 数据处理
        function responseHandler(res) {
			if (res.body.total > 0) {
				return {
					"rows" : res.body.rows,
					"total" : res.body.total
				}
			} else {
				return {
					"rows" : [],
					"total" : 0
				}
			}
		}
	</script>

</body>
</html>
