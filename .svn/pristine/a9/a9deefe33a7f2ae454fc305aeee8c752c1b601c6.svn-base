    <delete id="deleteById" parameterType="java.lang.String">
         DELETE FROM XA_GOODS WHERE ID = #{id}
    </delete>
     
	<delete id="deleteByIds" parameterType="java.util.List">
	    delete from 
			XA_GOODS
		where 
			ID IN  
