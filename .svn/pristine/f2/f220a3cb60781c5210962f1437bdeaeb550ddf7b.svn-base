/* 初始基本设置 */
*{margin: 0; padding: 0; list-style: none;}
#mainContent{
    width: 99%;
    margin: 0 0 0 1%;
}
a{color: #000; text-decoration: none;}
.panel-heading,#mainMenu{ background: #273238;}
a:hover{ text-decoration: none;}
.navbar-default{border:none;}
.title{
	width: 100%;
    height: 42px; 
    font-size: 14px; 
    line-height: 42px;
    background: url("../../img/login/anrow-right.png") no-repeat 90% 18px;
    overflow: hidden; 
    text-indent: 1em;
    cursor: pointer;}
.list{
	width: 100%;
    z-index: 999; 
    display: none;}
.list a{ width: 100%; height: 100%;display: inline-block;}
.list li{width: 100%; height: 42px; line-height: 42px; font-size: 14px;
    color: #666; position: relative; z-index: 999; cursor: pointer;}
.list li a{ text-indent: 1.8em;}
.list li:hover,.list li.active{background: #20292e; color: #b4c1c8;}
.list li:hover a,.list li.active a{color: #b4c1c8;}
.title a,.list a{padding-left:6px; box-sizing: border-box;color:#b4c1c8;}
.list a{padding-left:28px;}

/* 初始基本设置 */
#navigationDiv{margin-bottom:0px;height:60px;line-height:60px;background:#fff;
    border-bottom:1px solid #ddd;
    }
#navigationDiv a{color:#ff7223;}
#content{margin-top:40px;background:#f2f3f5;}
.container-fluid{padding-left:0px;height:0px;}
#sidebar{padding:0px;padding-top:20px;}
.titleBox i{display:inline-block;width:20px;height: 42px;
    background: url(../../img/login/home.png) no-repeat center 12px;vertical-align: middle;}
.titleBox:nth-child(2) i{background: url(../../img/login/order.png) no-repeat center 12px;}
.titleBox:nth-child(3) i{background: url(../../img/login/ship.png) no-repeat center 12px;}
.titleBox:nth-child(4) i{background: url(../../img/login/entry.png) no-repeat center 12px;}
.titleBox:nth-child(5) i{background: url(../../img/login/warehouse.png) no-repeat center 12px;}
.titleBox:nth-child(6) i{background: url(../../img/login/goods.png) no-repeat center 12px;}
.titleBox:nth-child(7) i{background: url(../../img/login/count.png) no-repeat center 12px;}
.titleBox:nth-child(8) i{background: url(../../img/login/system.png) no-repeat center 12px;} 
    
    
/*默认选中左侧菜单第一个子菜单  */   
#mainMenu .titleBox:nth-child(1) .list{display:block;}
#mainMenu .titleBox:nth-child(1) .title{width: 100%;
    height: 42px; 
    font-size: 14px; 
    line-height: 42px;
    background: url("../../img/login/anrow-down.png") no-repeat 90% 18px;
    overflow: hidden; 
    text-indent: 1em;
    cursor: pointer;}
    
